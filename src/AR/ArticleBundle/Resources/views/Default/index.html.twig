{% extends 'ARArticleBundle::layout.html.twig' %}

{% block body %}
    {% for article in articles %}
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">{{ article.getTitle() }}</h3>
            </div>
            <div class="panel-body">
                {{ article.getText() }}
            </div>
            <div class="panel-footer">
                {{ article.getDate()|date('d/m/Y Ã  H:i:s') }}<br/>
                {% for tag in article.getTags() %}
                    <span class="label label-primary">{{ tag.getName() }}</span>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <p>Aucun article !</p>
    {% endfor %}
{% endblock %}


