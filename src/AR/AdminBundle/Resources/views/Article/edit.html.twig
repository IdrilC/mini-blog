{% extends 'ARAdminBundle::layout.html.twig' %}

{% block body -%}
    <h1>Editer Article</h1>
    <hr/>

    {{ form_start(edit_form) }}

    <div class="form-group">
        {{ form_label(edit_form.title) }}
        {{ form_widget(edit_form.title, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.text) }}
        {{ form_widget(edit_form.text, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.date) }}
        {{ form_widget(edit_form.date) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.tags) }}
        {{ form_widget(edit_form.tags, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_end(edit_form) }}

    <ul class="pager">
        <li class="previous">
            <a href="{{ path('article') }}">
                Retour
            </a>
        </li>
    </ul>
    {{ form(delete_form) }}
{% endblock %}
